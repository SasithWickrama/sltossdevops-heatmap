<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorFont1</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorBelt</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linearParent" parent="parent">
        <item name="android:orientation">vertical</item>
        <item name="background">@color/apppbground</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myButton" parent="viewParent">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@color/colorFont1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="myButton1" parent="viewParent">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@color/colorFont3</item>
        <item name="android:padding">1.5dp</item>
    </style>

    <style name="myEditText" parent="parent">
        <item name="android:textSize">20dp</item>
        <item name="android:textColorHint">@color/colorFont2</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mySpinner" parent="parent">
        <item name="android:textSize">20dp</item>
        <item name="android:entries">@color/colorFont1</item>
        <item name="android:textColorHint">@color/colorFont1</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:popupBackground">@color/colorBackground</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="mySPEditText" parent="parent">
        <item name="android:textSize">20dp</item>
        <item name="android:textColorHint">@color/colorFont1</item>
        <item name="android:textColor">@color/colorFont1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="headerText" parent="parent">
        <item name="android:textSize">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorFont1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerText1" parent="parent">
        <item name="android:textSize">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorFont1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerText2" parent="parent">
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorFont2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerText3" parent="parent">
        <item name="android:textSize">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerText4" parent="parent">
        <item name="android:textSize">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="linkText" parent="parent">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorFont2</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>
